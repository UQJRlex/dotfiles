#!/usr/bin/sh
# @author nate zhou
# @since 2025

usage="$(command df /home | awk 'NR==2 {print $5}')"

icon=""

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(df -h -x tmpfs -x efivarfs -x devtmpfs | awk 'NR=2 {print $6 "\t" $2 "\t" $3 "\t" $4}')"
        ;;
    2) footclient -T "Floating Term" ncdu --disable-delete $HOME>/dev/null &
        ;;
    3) notify-send -u low -r 3301 -t 1100 "$icon $(basename $0)" "" && pkill -SIGRTMIN+13 i3blocks &
        ;;
esac

# ` `(U+2009) is the Thin Space
echo "$icon" "$usage"
