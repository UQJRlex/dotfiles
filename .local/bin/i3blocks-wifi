#!/usr/bin/sh
# @author nate zhou
# @since 2025

status="$(cat /sys/class/net/w*/operstate 2>/dev/null)"
color="#eeeeee"

level="$(nmcli -f IN-USE,SIGNAL dev wifi | grep '*' | awk '{print $2}')"

[ "$status" = "up" ] && icon="󰖩" || icon="󰖪" color="#777777" level=""

case $BLOCK_BUTTON in
    2) footclient nmtui>/dev/null &
        ;;
esac

# ` `(U+2009) is the Thin Space
echo "<b>$icon</b>" "$level"%
echo

echo "$color"
