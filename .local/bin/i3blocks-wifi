#!/usr/bin/sh
# @author nate zhou
# @since 2025

status="$(cat /sys/class/net/w*/operstate 2>/dev/null)"
color="#eeeeee"

level="$(awk '/^\s*w/ {print int($3 * 100 / 70)"%"}' /proc/net/wireless)"

[ "$status" = "up" ] && icon="󰖩" || icon="󰖪" color="#888888" level=""

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(nmcli connection show --active | awk 'NR >1 {print $3,$4}')"
        ;;
    2) footclient -T "Floating Term" nmtui>/dev/null &
        ;;
    3) notify-send -u low -r 3301 -t 1100 "$icon $(basename $0)" "refreshed" && pkill -SIGRTMIN+11 i3blocks >/dev/null &
        ;;
esac

# ` `(U+2009) is the Thin Space
echo "<b>$icon</b>" "$level"
echo

echo "$color"
