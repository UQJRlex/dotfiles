#!/usr/bin/sh
# @author nate zhou
# @since 2025
# wipe wl-clipboard history

user_choice="$(echo "no\nyes" \
    | ${HOME}/.local/bin/wmenu-color \
        -p "$(basename $0): wipe wl-clipboard history? ")"

[ "$user_choice" = "yes" ] \
    && (cliphist wipe; \
        notify-send -u low -r 199 "$(basename $0)" "cliphist wipe") \
    || (notify-send -u low -r 199 "$(basename $0)" "aboarted"; \
        exit 0)
