#!/usr/bin/sh
# @author nate zhou
# @since 2025

tty_count="$(w -h | wc -l )"
[ "$tty_count" -eq 1 ] && exit 1

icon=""
# ` `(U+2009) is the Thin Space

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(w -h | awk '{print $1,$2,$3}')"
        ;;
esac

echo "$icon" "$tty_count"
