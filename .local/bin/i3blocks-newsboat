#!/usr/bin/sh
# @author nate zhou
# @since 2025

result="$(cat $HOME/.cache/newsboat.num)"

icon="󰡠"
color="#eeeeee"

[ "$result" -eq 0 ] || [ -z "$result" ] && exit 0

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(newsboat -x print-unread)"
        ;;
    2) footclient news >/dev/null &
        ;;
esac

# ` `(U+2009) is the Thin Space
echo "$icon" "$result"
echo


echo "$color"
