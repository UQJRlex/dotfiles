#!/usr/bin/env bash
# @author nate zhou
# @since 2025

WTTR_CACHE="$HOME/.cache/wttr"
update_time="$(stat -c "%Y" "$WTTR_CACHE")"
current_time="$(date +%s)"

result="$(sed 's/^.//; s/\+//' $WTTR_CACHE)"
color="#eeeeee"
icon="î»°"


(( current_time - update_time > 86400 )) && result=""

echo ["$icon$result"]
echo

[ -z "$result" ] && color="#777777"

echo "$color"
