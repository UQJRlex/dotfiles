#!/usr/bin/sh
# @author nate zhou
# @since 2025
# resize images to a specific size
# usage: for in loop `for i in *; do imgresize "$i"; done`

size="1920x1080"

[ "$#" -eq 0 ] && echo "Usage: $(basename $0) [widthxheight] image"

[ "$#" -eq 2 ] && size="$2"

convert "$1" -resize "$size" -background black -quality 100% -gravity center -extent ${size} "new-$1"
