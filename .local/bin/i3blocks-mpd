#!/usr/bin/env bash
# @author nate zhou
# @since 2025

title="$(mpc current -f "[%title%]" | cut -c1-40 | sed 's/[^a-zA-Z0-9)]*$//')"
[ -z "$title" ] && exit 0

echo "ÔÄÅ" "$title"
echo

color="#eeeeee"
if [[ -z "$title" || "$(mpc status | sed -n '2p' )" =~ '[paused]' ]]; then
    color="#777777"
fi

echo "$color"
