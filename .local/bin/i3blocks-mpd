#!/usr/bin/env bash
# @author nate zhou
# @since 2025

title="<small>$(mpc current -f "[%title%]" | cut -c1-40 )</small>"
[ -z "$title" ] && exit 0

# ` `(U+2009) is the Thin Space
echo "" "$title"
echo

color="#eeeeee"
if [[ -z "$title" || "$(mpc status | sed -n '2p' )" =~ '[paused]' ]]; then
    color="#777777"
fi

echo "$color"
