#!/usr/bin/env bash
# @author nate zhou
# @since 2025

title="$(mpc current -f "[%title%]" | cut -c1-40 )"
[ -z "$title" ] && exit 0

echo "ÔÄÅ" "<small>$title</small>"
echo

color="#eeeeee"
if [[ -z "$title" || "$(mpc status | sed -n '2p' )" =~ '[paused]' ]]; then
    color="#777777"
fi

echo "$color"
