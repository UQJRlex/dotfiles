#!/usr/bin/sh
# @author nate zhou
# @since 2025
# i3blocks module to count unread emails in mutt

MAIL_DIR="$HOME/doc/mail"

icon="󰇮"
color="#ffffff"

result="$(find "$MAIL_DIR"/*/INBOX/new/ -type f | wc -l)"

[ "$result" -eq 0 ] && color="#a8a196"

# ` `(U+2009) is the Thin Space
echo "$icon" "$result"
echo
echo "$color"

case $BLOCK_BUTTON in
    1)
        pkill -SIGRTMIN+18 i3blocks &
        ;;
esac

