#!/usr/bin/sh
# @author nate zhou
# @since 2025


usage="$(command free | awk '/Mem:/ {printf "%.0f\n", $3/$2 * 100}')"

icon=""

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(free -h | awk 'NR>1 {print $3"/" $2}')"
        ;;
esac

# ` `(U+2009) is the Thin Space
echo "$icon" "$usage""%"
