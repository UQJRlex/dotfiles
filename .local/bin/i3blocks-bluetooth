#!/usr/bin/sh
# @author nate zhou
# @since 2025

color="#eeeeee"
icon=""

level=$(bluetoothctl info | grep -m1 'Battery Percentage' | awk -F'[()]' '{print $2}')

[ -z "$level" ] && (echo "$icon"; echo; echo "#777777") && exit 0

case $BLOCK_BUTTON in
    2) footclient bluetui>/dev/null &
        ;;
esac

# ` `(U+2009) is the Thin Space
echo "$icon" "$level"%
echo
echo "$color"
