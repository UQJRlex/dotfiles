#!/usr/bin/sh
# @author nate zhou
# @since 2025

status="$(cat /sys/class/net/e*/operstate 2>/dev/null)"
icon="î½„"
color="#ffffff"

[ "$status" != "up" ] && color="#888888"

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(nmcli connection show --active | awk 'NR >1 {print $3,$4}')"
        ;;
    2) footclient -T "Floating Term" nmtui>/dev/null &
        ;;
    3) notify-send -u low -r 3301 -t 1100 "$icon $(basename $0)" "refreshed" && pkill -SIGRTMIN+11 i3blocks &
        ;;
esac
echo "$icon"
echo

echo "$color"
