#!/usr/bin/sh
# @author nate zhou
# @since 2025

result="$(cat $HOME/.cache/checkupdates-cron.num)"

icon=""
color="#ffffff"

case $BLOCK_BUTTON in
    1) notify-send -u low -r 3301 "$icon $(basename $0)" "$(cat $HOME/.cache/checkupdates-cron.log)"
esac

[ "$result" -eq 0 ] || [ -z "$result" ] && exit 0

# ` `(U+2009) is the Thin Space
echo "<b>$icon</b>" "$result"
echo


echo "$color"
