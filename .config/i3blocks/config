# i3blocks/config
# @author nate zhou
# @since 2025


# Global properties
separator=true
separator_block_width=4
markup=pango
background=#005577
border=#005577

# use i3blocks to do cronjob
[swaymaxd]
command= swaymaxd>/dev/null
interval=60

# modules
[mpdd]
command= i3blocks-mpdd
# -2 will respawn the command as soon as it terminates
interval=-2

[mpd]
